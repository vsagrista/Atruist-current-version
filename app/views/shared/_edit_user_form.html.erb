<div class="panel panel-default">
    <div class="panel-body">
        <%= form_for @user do |f| %>
        <div class="form-group">
            <%= f.label :name %><%= f.text_field :name, autofocus: true, class: "form-control user-name" %>
        </div>
        <div class="form-group">
            <%= f.label :about %><%= f.text_field :about, autofocus: true, class: "form-control user-name" %>
        </div>
        <%= f.submit t('.sign_up', :default => "Save"), class: "btn btn-primary", id: "sign-up-btn"%><%end %>
        <br>
        <p class="important-change">
            <%= link_to "Change Password", edit_user_registration_path %>
        </p>
        <p class="important-change">
            <%= link_to "Change Address", users_address_path %>
        </p>
    </div>
</div>
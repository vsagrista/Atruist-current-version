<div class="panel panel-default">
        <div class="panel-body">
            <%= form_for [@user,@talent] do |f| %>
            <div class="form-group">
                <%= f.label "Choose a Talent, or type it if you can't find it " %>
                <%= select @talent, :name, @yaml, class: "choice" %>
                <img src="/assets/thumb.png" id="thumb">  
                <%= f.text_field :name, autofocus: true, class: "form-control user-name", value: "", id: "name" %>
            </div>
            <div class="form-group">
                <%= f.label "Add a Description :" %><%= f.text_field :description, autofocus: true, class: "form-control user-name" %>
            </div>
            <%= f.submit t('.sign_up', :default => "Save"), class: "btn btn-primary", id: "sign-up-btn"%><%end %>
            <br>    
    </div>
</div>

<script type="text/javascript">
    $("select").change(function () {
    var value = this.value; 
    $("#name").val(value);
});
</script>


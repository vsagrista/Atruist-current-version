<div class="panel panel-default">
        <div class="panel-body">
            <%= form_for [@user,@talent] do |f| %>
            <div class="form-group">
                <%= f.label "Talent Name" %><%= f.text_field :name, autofocus: true, class: "form-control user-name" %>
            </div>
            <div class="form-group">
                <%= f.label "Talent Description" %><%= f.text_field :description, autofocus: true, class: "form-control user-name" %>
            </div>
            <%= f.submit t('.sign_up', :default => "Save"), class: "btn btn-primary", id: "sign-up-btn"%><%end %>
            <br>    
    </div>
</div>
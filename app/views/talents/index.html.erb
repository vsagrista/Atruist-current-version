    <div class="wrapper skill-icon-area-container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="name">Welcome, <%= @user.name.capitalize %></h2>
                <p>My Talents</p>
            </div>
            <div class="col-md-6">
                <div class="skills-logo-area">
                    <img class="skills-icon" src="/assets/skills-icon2.jpg">
                    <h2>Talents</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="wrapper index-talents-wrapper">
        <div class="container">
        <% if @talents.empty? %>
            <div class="empty">
                <h2>Still empty...
                <%= link_to "Add a talent",    new_user_talent_path %>
                </h2>
                <img src="/assets/empty.jpg">
                <br>

            </div>
        <% else %>
        <h2 class="text-center">
            <%= link_to "Add a talent", new_user_talent_path %>
        </h2>
            <% @talents.each_with_index do |talent,index| %>

                <div class="list-group">
                    <div class="list-group-item">

                        <a aria-controls="collapse-description" aria-expanded="false"
                        class="list-group-item" data-toggle="collapse" href=
                        "#collapse-description<%= index %>" role="button"><i class=
                        "fa fa-angle-right fa-2x pull-right"></i>
                        Talent: <%= talent.name %>
                        </a>
                        <div class="collapse" id="collapse-description<%= index %>">
                            <div class="well">
                                <p>Description: <%= talent.description %></p>
                                <% if talent.rating > 0 %>
                                <p>Rating: <%= talent.rating %></p>
                                <% else %>
                                <p>Rating: Not rated yet</p>
                                <% end %>
                                <%= link_to "Edit", edit_user_talent_path(@user,talent) %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>











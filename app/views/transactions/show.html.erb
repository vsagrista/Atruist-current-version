<div class="wrapper skill-icon-area-container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="name">Hey, <%= @user.name.capitalize %></h2>
            <p>This is the state of this petition  </p>  
        </div>
        <div class="col-md-6">
            <div class="skills-logo-area">
                <img class="skills-icon change" src="/assets/connected.jpg">
            		<h2><bold>Your Petition</bold></h2>   
            </div>
       </div>
    </div>
</div>
<br>
<div class="container">
	
    <p>
        <% if @sender == @user %>
        With altruist: <%= @recipient.name %>
        <% else %>
        From altruist: <%= @sender.name %>
        <% end %>
        
    </p>
    <p>Subject: <%= @transaction.subject %> </p>
    <p> When:  <%= @transaction.date %> </p>
    <p> Minutes: <%= @transaction.minutes %> </p>
<div class="transaction-buttons">
<%= form_for @transaction, :url => { :action => "update"} do |t| %>
<%= t.hidden_field :accepted, :value => true %>
    <%= t.submit "Accept Exchange", class: "btn btn-primary accept-button" %>
<% end %> 

<%= form_for @transaction, :url => { :action => "update"} do |t| %>
<%= t.hidden_field :cancelled, :value => true %>
<%= t.hidden_field :cancelation, :value => 1  %>
    <%= t.submit "Decline", class: "btn btn-primary cancel-button" %>
<% end %> 
</div>
    <p>
       Accepted: <%= @transaction.accepted%>   
    </p>
    <p>
        Rated: <%= @transaction.rated %>      
    </p>
</div>